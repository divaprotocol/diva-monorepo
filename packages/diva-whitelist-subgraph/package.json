{
  "name": "@diva/diva-whitelist-subgraph",
  "license": "UNLICENSED",
  "version": "0.0.1",
  "scripts": {
    "lint": "yarn codegen && yarn build",
    "codegen": "graph codegen ropsten.subgraph.yaml",
    "build": "yarn codegen && graph build ropsten.subgraph.yaml",
    "auth": "graph auth --product hosted-service $THEGRAPH_ACCESS_TOKEN",
    "deploy": "yarn auth && run-s deploy-ropsten deploy-mumbai deploy-rinkeby deploy-kovan",
    "deploy-ropsten": "graph deploy --node https://api.thegraph.com/deploy/ divaprotocol/diva-whitelist-ropsten ropsten.subgraph.yaml",
    "deploy-mumbai": "graph deploy --node https://api.thegraph.com/deploy/ divaprotocol/diva-whitelist-mumbai mumbai.subgraph.yaml",
    "deploy-rinkeby": "graph deploy --node https://api.thegraph.com/deploy/ divaprotocol/diva-whitelist-rinkeby rinkeby.subgraph.yaml",
    "deploy-kovan": "graph deploy --node https://api.thegraph.com/deploy/ divaprotocol/diva-whitelist-kovan kovan.subgraph.yaml",    
    "create-local": "graph create --node http://localhost:8020/ divaprotocol/diva-whitelist-subgraph",
    "remove-local": "graph remove --node http://localhost:8020/ divaprotocol/diva-whitelist-subgraph",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 divaprotocol/diva-whitelist-subgraph"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.25.1",
    "@graphprotocol/graph-ts": "0.24.1"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
