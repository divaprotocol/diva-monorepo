{
  "name": "@diva/diva-subgraph",
  "license": "UNLICENSED",
  "version": "0.0.1",
  "scripts": {
    "lint": "yarn codegen && yarn build",
    "codegen": "graph codegen goerli.subgraph.yaml",
    "codegen-polygon-pilot": "graph codegen polygon.subgraph.pilot.yaml",
    "build": "yarn codegen && graph build goerli.subgraph.yaml",
    "build-pilot": "yarn codegen-polygon-pilot && graph build polygon.subgraph.pilot.yaml",
    "build-mumbai": "yarn codegen-mumbai && graph build mumbai.subgraph.yaml",
    "graph:auth-hosted": "graph auth --product hosted-service $THEGRAPH_ACCESS_TOKEN",
    "graph:auth-studio": "graph auth --studio $DIVA_SUBGRAPH_STUDIO_ACCESS_TOKEN goerli.subgraph.yaml",
    "deploy": "run-s deploy-goerli-new-2",
    "deploy-goerli": "graph deploy --studio $DIVA_SUBGRAPH_STUDIO_SLUG goerli.subgraph.yaml",
    "deploy-goerli-new-2": "graph deploy --node https://api.thegraph.com/deploy/ divaprotocol/diva-goerli-new-2 goerli.subgraph.new.yaml",
    "deploy-mumbai": "graph deploy --node https://api.thegraph.com/deploy/ divaprotocol/diva-mumbai mumbai.subgraph.yaml",
    "deploy-polygon": "graph deploy --node https://api.thegraph.com/deploy/ divaprotocol/diva-polygon polygon.subgraph.yaml",
    "deploy-polygon-pilot": "graph deploy --node https://api.thegraph.com/deploy/ divaprotocol/diva-polygon-pilot polygon.subgraph.pilot.yaml",
    "create-local": "graph create --node http://localhost:8020/ divaprotocol/diva-subgraph",
    "remove-local": "graph remove --node http://localhost:8020/ divaprotocol/diva-subgraph",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 divaprotocol/diva-subgraph",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "^0.37.1",
    "@graphprotocol/graph-ts": "0.26.0",
    "prettier": "^2.5.1"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
